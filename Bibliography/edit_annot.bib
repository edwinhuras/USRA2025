@article{jainRoleSinglecellMechanical2020,
  title = {The Role of Single-Cell Mechanical Behaviour and Polarity in Driving Collective Cell Migration},
  author = {Jain, Shreyansh and Cachoux, Victoire M. L. and Narayana, Gautham H. N. S. and {de Beco}, Simon and D'Alessandro, Joseph and Cellerin, Victor and Chen, Tianchi and Heuz{\'e}, M{\'e}lina L. and Marcq, Philippe and M{\`e}ge, Ren{\'e}-Marc and Kabla, Alexandre J. and Lim, Chwee Teck and Ladoux, Benoit},
  annotation = { 
 \textbf{Collective Cell Migration in Ring Geometry:} \\
 This study explores how epithelial cells migrate collectively in annular (ring-shaped) domains. While single-cell migration is well studied, collective migration introduces complex behaviors, including leading cells, follower cohorts, and bulk movement. \\

 \textbf{Coordination Dynamics:}
 \begin{itemize}
 \item Coordination was quantified using the average cross product of each cell's unit velocity vector and its radial position vector (values: +1 = clockwise, -1 = anti-clockwise, 0 = unaligned).
 \item Cells began with oscillatory motion, but coordination peaked as cell trains collided and merged.
 \item Ultimately, cells reached confluence and adopted a stable coordinated direction (either +1 or -1).
 \item Coordination degraded with proliferation due to crowding ("cell jamming"), but was preserved when cell division was limited.
 \end{itemize}

 \textbf{Train Collisions and Polarity Reversal:}
 \begin{itemize}
 \item Colliding cell trains triggered directional reversal in one train via contact inhibition of locomotion.
 \item Reversal was linked to rapid polarity switching in the colliding cells.
 \item Final direction was best predicted by the size and speed of the last train to collide.
 \item Lamellipodial protrusions in leader cells were key: dominant leaders induced polarity reversal in opposing cells.
 \end{itemize}

 \textbf{Single-Cell Dynamics and Emergent Coordination:}
 \begin{itemize}
 \item Cells formed unidirectional polarity gradients within the group.
 \item Follower cells developed "cryptic lamellipodia" that tucked under leading cells, enabling persistent, coordinated movement.
 \item Disrupting lamellipodia in a few cells halted global coordination.
 \item Cell–cell junctions were required for initiating, but not maintaining, collective motion.
 \item Once coordination emerged, it persisted even after physically disrupting the train or isolating cells.
 \end{itemize}

 \textbf{Simulation and Implications:}
 \begin{itemize}
 \item A simple ring-domain simulation incorporating cell polarity and adhesion reproduced experimental findings.
 \item Long-term memory of polarity emerged as a critical mechanism, decoupling sustained motion from ongoing adhesion.
 \item Highlights how single-cell dynamics shape global migration—relevant for development, wound healing, and metastasis.
 \end{itemize}
  },
  year = {2020},
  month = jul,
  journal = {Nature Physics},
  volume = {16},
  number = {7},
  pages = {802--809},
  issn = {1745-2481},
  doi = {10.1038/s41567-020-0875-z},
  urldate = {2025-05-07},
  abstract = {The directed migration of cell collectives is essential in various physiological processes, such as epiboly, intestinal epithelial turnover, and convergent extension during morphogenesis, as well as during pathological events such as wound healing and cancer metastasis. Collective cell migration leads to the emergence of coordinated movements over multiple cells. Our current understanding emphasizes that these movements are mainly driven by large-scale transmission of signals through adherens junctions. In this study, we show that collective movements of epithelial cells can be triggered by polarity signals at the single-cell level through the establishment of coordinated lamellipodial protrusions. We designed a minimalistic model system to generate one-dimensional epithelial trains confined in ring-shaped patterns that recapitulate rotational movements observed in vitro in cellular monolayers and in vivo in genital or follicular cell rotation. Using our system, we demonstrated that cells follow coordinated rotational movements after establishing directed Rac1-dependent polarity over the entire monolayer. Our experimental and numerical approaches show that the maintenance of coordinated migration requires the acquisition of a front--rear polarity within each single cell but does not require the maintenance of cell--cell junctions. Taken together, these unexpected findings demonstrate that collective cell dynamics in closed environments as observed in multiple in vitro and in vivo situations can arise from single-cell behaviour through a sustained memory of cell polarity.},

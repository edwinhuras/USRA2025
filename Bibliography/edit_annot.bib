  langid = {english},
  keywords = {Cellular motility,Computational biophysics},
  file = {/Users/edwinhuras/Zotero/storage/9T4XKST7/Jain et al. - 2020 - The role of single-cell mechanical behaviour and polarity in driving collective cell migration.pdf}
}
